#!/bin/bash


[ "$(stat -c  %y ~/.cache/corona_ke 2>/dev/null| cut -d' ' -f1)" != "$(date '+%Y-%m=%d')" ] && curl -s https://corona-stats.online/kenya > ~/.cache/corona_ke


grep "Country\|Kenya" ~/.cache/corona_ke |
      sed "s/\s*//g ; s/║//g ; s/│/;/g"|
      cut -d';' -f 2,8,9,10 |
      awk -F ';' '{print "Kenya" "😷️"$2,"😱️" $3}'
